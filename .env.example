# API Keys
# Copy this file to .env and fill in your actual API keys

# OpenAI API Key (for AI plant recognition and analysis)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# OpenWeatherMap API Key (for weather data)
# Get your free key from: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Plant.id API Key (optional, for plant identification)
# Get your key from: https://web.plant.id/
PLANT_ID_API_KEY=your_plant_id_api_key_here

# Flask Secret Key (for sessions)
# Generate a random string for production
FLASK_SECRET_KEY=your_secret_key_here

# Database Configuration (if needed)
# MYSQL_HOST=localhost
# MYSQL_USER=root
# MYSQL_PASSWORD=
# MYSQL_DB=egrowtifydb