# API Keys
# Copy this file to .env and fill in your actual API keys

# OpenAI API Key (for AI plant recognition and analysis)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# OpenWeatherMap API Key (for weather data)
# Get your free key from: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Plant.id API Key (optional, for plant identification)
# Get your key from: https://web.plant.id/
PLANT_ID_API_KEY=your_plant_id_api_key_here

# Flask Configuration
FLASK_ENV=development
FLASK_SECRET_KEY=your_secret_key_here

# CORS Origins (comma-separated for multiple origins)
# For production: https://your-frontend-domain.com,https://www.your-frontend-domain.com
CORS_ORIGINS=http://localhost:3000

# Database Configuration
# For local development (XAMPP):
MYSQL_HOST=localhost
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DB=egrowtifydb

# For production (uncomment and configure):
# DATABASE_TYPE=mysql
# MYSQL_HOST=your_production_db_host
# MYSQL_USER=your_db_user
# MYSQL_PASSWORD=your_db_password
# MYSQL_DB=egrowtifydb

# For PostgreSQL (Render, Railway):
# DATABASE_TYPE=postgresql
# DATABASE_URL=postgresql://user:password@host:port/dbname

# Server Configuration (for production)
# PORT=5000
# HOST=0.0.0.0

# Email Configuration (optional)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your_email@gmail.com
# MAIL_PASSWORD=your_app_password
